---
import BaseLayout from '../layouts/BaseLayout.astro';
import LegalTOC from '../components/LegalTOC.astro';
import TermsDoc from '../content/legal/terms.mdx';

const sections = [
  { id: 'acceptance', label: 'Acceptance & Scope' },
  { id: 'changes', label: 'Changes' },
  { id: 'acceptable-use', label: 'Acceptable Use' },
  { id: 'content-ip', label: 'Content & IP' },
  { id: 'warranty', label: 'No Warranties' },
  { id: 'liability', label: 'Limitation of Liability' },
  { id: 'dmca', label: 'DMCA Notice' },
  { id: 'governing-law', label: 'Governing Law' },
  { id: 'arbitration', label: 'Arbitration' },
  { id: 'contact', label: 'Contact' },
];
---

<BaseLayout
  title="Terms of Use â€” Journal Foundation"
  description="Terms that govern your use of the Journal Foundation website and services."
>
  <div class="container prose legal-layout">
    <aside class="legal-sidebar">
      <LegalTOC sections={sections} />
      <div class="legal-meta">
        Last updated: <strong>May 26, 2024</strong>
      </div>
    </aside>
    <main>
      <TermsDoc />
    </main>
  </div>
</BaseLayout>

<style>
  .legal-layout {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-3xl);
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
  }

  .legal-sidebar {
    position: sticky;
    top: 6rem;
    align-self: start;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .legal-meta {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  @media (max-width: 900px) {
    .legal-layout {
      grid-template-columns: 1fr;
    }

    .legal-sidebar {
      position: static;
    }
  }
</style>
